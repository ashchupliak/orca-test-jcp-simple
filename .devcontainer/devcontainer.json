{
	"name": "JCP Simple - Kotlin/JVM Microservice",
	"image": "mcr.microsoft.com/devcontainers/java:17-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17",
			"installGradle": true,
			"gradleVersion": "8.5"
		},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"fwcd.kotlin",
				"vscjava.vscode-gradle"
			]
		}
	},

	"remoteEnv": {
		"GRADLE_USER_HOME": "/workspace/.gradle"
	},

	"postCreateCommand": "echo 'Sleeping for 3 minutes to keep container alive...' && sleep 180 && echo 'Container ready'",

	"postStartCommand": "echo 'âœ… JCP Simple ready for development'",

	"forwardPorts": [8080],

	"portsAttributes": {
		"8080": {
			"label": "Application",
			"onAutoForward": "notify"
		}
	},

	"remoteUser": "vscode"
}
